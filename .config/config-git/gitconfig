# vim: ft=gitconfig

[alias]
  # Examining
  s   = status
  ss  = status -uno

  lg   = log --graph --decorate --oneline
  lga  = log --graph --decorate --oneline --all
  lgb  = log --graph --decorate --oneline --branches
  lgl  = log --graph --decorate

  lgs  = log -S
  lgg  = log -G

  ls = ls-files

  br = branch
  cbr = rev-parse --abbrev-ref HEAD
  root = rev-parse --show-toplevel

  # Modifying
  a = add
  au = add -u
  rst = reset HEAD

  co = checkout
  ci = commit

  conflicts = !git ls-files --unmerged | cut -c51- | sort -u | xargs $EDITOR
  resolve   = !git ls-files --unmerged | cut -c51- | sort -u | xargs git add

  # submodules
  subdiff = !"git submodule foreach --recursive --quiet '[ \"$(git status -s)\" ] && echo \"--- $name ---\" && git status -s && git diff --unified=1 || :'"
  subbr   = !"git submodule foreach --recursive 'git rev-parse --abbrev-ref HEAD'"

[core]
  editor = vim

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[push]
  default = simple

[receive]
  denyCurrentBranch = refuse
